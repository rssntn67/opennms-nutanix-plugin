<blueprint
        xmlns="http://www.osgi.org/xmlns/blueprint/v1.0.0"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns:cm="http://aries.apache.org/blueprint/xmlns/blueprint-cm/v1.3.0"
        xsi:schemaLocation="
                http://www.osgi.org/xmlns/blueprint/v1.0.0
                http://www.osgi.org/xmlns/blueprint/v1.0.0/blueprint.xsd

                http://aries.apache.org/blueprint/xmlns/blueprint-cm/v1.3.0
                http://aries.apache.org/schemas/blueprint-cm/blueprint-cm-1.3.0.xsd
">
<cm:property-placeholder id="nutanixConfigProperties" persistent-id="org.opennms.nutanix" update-strategy="reload">
        <cm:default-properties>
            <cm:property name="ssl.key-store.type" value="jks" />
        </cm:default-properties>
    </cm:property-placeholder>

    <bean id="clientProvider" class="org.opennms.nutanix.client.v3.V3ApiClientProvider"/>
    <service ref="clientProvider" interface="org.opennms.nutanix.client.api.ApiClientProvider"/>
</blueprint>
